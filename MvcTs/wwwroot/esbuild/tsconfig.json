{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noEmit": true,
      "isolatedModules": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "include": ["src"]
  }