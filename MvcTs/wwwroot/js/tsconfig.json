{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "declaration": true,
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}